<% include ./partials/header %>

<div class="container my-4 mx-auto">
    <h1 class="text-center my-3">Sign Up</h1>
    <form action="/register" method="POST">
        <div class="col-5 mx-auto">
            <input type="text" class="form-control my-2" name="username" placeholder="Username" required>
            <input type="email" class="form-control my-2" name="email" placeholder="Email" required>
            <input type="password" class="form-control my-2" name="password" placeholder="Password" required>
            <div class="d-flex justify-content-center">
                <input type="submit" class="btn btn-outline-primary" value="Submit"></input>
            </div>
        </div>
    </form>
</div>

<% include ./partials/footer %>